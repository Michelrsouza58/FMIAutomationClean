<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FMIAutomation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FMIAutomation"
    xmlns:views="clr-namespace:FMIAutomation.Views"
    Title="FMIAutomation">



    <TabBar Title="MenuPrincipal" Shell.TabBarBackgroundColor="#25303B" Shell.TabBarForegroundColor="White" Shell.TabBarTitleColor="White" Shell.TabBarUnselectedColor="#B0B0B0">
    <Tab Title="Home" Icon="icon_home.svg">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="HomePage" />
        </Tab>
    <Tab Title="Meus Dispositivos" Icon="icon_devices.svg">
            <ShellContent
                Title="Bluetooth"
                ContentTemplate="{DataTemplate views:BluetoothDevicesPage}"
                Route="BluetoothDevicesPage" />
        </Tab>
    <Tab Title="Perfil" Icon="icon_profile.svg">
            <ShellContent
                Title="Perfil"
                ContentTemplate="{DataTemplate views:ProfilePage}"
                Route="ProfilePage" />
        </Tab>
    </TabBar>

    <!-- Corrigir xmlns para Views -->
    <!-- xmlns:views="clr-namespace:FMIAutomation.Views" -->
    <!-- <ShellContent Title="Bluetooth" ContentTemplate="{DataTemplate views:BluetoothDevicesPage}" Route="BluetoothDevicesPage" /> -->

</Shell>
