<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FMIAutomation.Views.ProfilePage"
             BackgroundColor="#25303B">
    <VerticalStackLayout Padding="30,40,30,0" Spacing="20">
        <Frame Padding="0" IsClippedToBounds="True" CornerRadius="80" HeightRequest="120" WidthRequest="120" HasShadow="False" BackgroundColor="Transparent" HorizontalOptions="Center">
            <Image Source="icon_apple.png" HeightRequest="120" WidthRequest="120" Aspect="AspectFill" />
        </Frame>
        <Label Text="Seu Perfil" TextColor="White" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Text="Aqui você poderá editar seus dados, trocar senha, etc." TextColor="#B0B0B0" FontSize="16" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
