                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
                
                <!-- Mensagem quando nÃ£o hÃ¡ dispositivos -->
                <VerticalStackLayout x:Name="EmptyStateSection" 
                                     IsVisible="True" 
