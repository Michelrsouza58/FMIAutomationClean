                                                             HorizontalOptions="StartAndExpand">
                                            <Label Text="{Binding Name}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold" 
                                                   TextColor="#2563EB"/>
                                            <Label Text="Conectado" 
                                                   FontSize="12" 
                                                   TextColor="#10B981"/>
                                        </VerticalStackLayout>
                                        <Button Text="âš™ï¸" 
                                                BackgroundColor="#2563EB" 
                                                TextColor="White" 
                                                CornerRadius="20" 
                                                WidthRequest="40" 
                                                HeightRequest="40" 
                                                FontSize="16"/>
