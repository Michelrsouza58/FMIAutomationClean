               BackgroundColor="#E3F2FD" 
               CornerRadius="15" 
               Padding="15" 
               Margin="20,0,20,10" 
               IsVisible="False">
            <HorizontalStackLayout Spacing="10">
                <ActivityIndicator x:Name="ScanIndicator" 
