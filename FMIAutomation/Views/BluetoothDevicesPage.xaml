                    <CollectionView x:Name="AvailableDevicesCollection" 
                                    ItemsLayout="VerticalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White" 
                                       CornerRadius="15" 
                                       Padding="15" 
                                       HasShadow="True" 
                                       Margin="0,0,0,10">
                                    <HorizontalStackLayout Spacing="15">
                                        <Frame WidthRequest="50" 
                                               HeightRequest="50" 
                                               CornerRadius="25" 
                                               BackgroundColor="#94A3B8" 
                                               Padding="8">
                                            <Label Text="ðŸ“±" 
