                    Shadow="{OnPlatform WinUI={x:Null}, Default={Shadow Brush=Black, Opacity=0.3, Radius=8, Offset='0,4'}}" />
        </Grid>
        
        <!-- Status do Scan -->
        <Frame Grid.Row="1" 
