<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FMIAutomation.Views.BluetoothDevicesPage"
             BackgroundColor="{DynamicResource BackgroundColor}">
    <Grid RowDefinitions="Auto, *">
        <!-- Header com botÃ£o de adicionar -->
        <Grid Row="0" Padding="20,20,20,10" ColumnDefinitions="*,Auto">
            <Label Text="Dispositivos Bluetooth" TextColor="{DynamicResource TextColor}" FontSize="24" FontAttributes="Bold" />
            <Button x:Name="AddDeviceBtn" Text="+" FontSize="28" WidthRequest="48" HeightRequest="48" CornerRadius="24" BackgroundColor="{DynamicResource AccentColor}" TextColor="{DynamicResource CardColor}" Grid.Column="1" />
        </Grid>
        <!-- Grid de dispositivos -->
        <ScrollView Grid.Row="1">
            <CollectionView x:Name="DevicesCollection" ItemsLayout="VerticalGrid, 3" Margin="10,0,10,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                            <Frame HeightRequest="72" WidthRequest="72" CornerRadius="36" BackgroundColor="{DynamicResource CardColor}" HasShadow="True" HorizontalOptions="Center" VerticalOptions="Center">
                                <Image Source="bluetooth_icon.svg" HeightRequest="40" WidthRequest="40" VerticalOptions="Center" HorizontalOptions="Center" />
                            </Frame>
                            <Label Text="{Binding Name}" TextColor="{DynamicResource TextColor}" FontSize="14" HorizontalTextAlignment="Center" FontAttributes="Bold" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>
